{
  "name": "cardindex",
  "version": "0.0.2",
  "description": "Conveniently record, trawl and find text data organized as cards on a mobile device",
  "main": "index.js",
  "repository": {
    "type": "git",
    "url": "git@github.com:stephenfrancis/cardindex"
  },
  "author": "stephen.d.francis@gmail.com",
  "license": "Apache-2.0",
  "scripts": {
    "build": "cd src && NODE_ENV=production rollup --config config/rollup.config.js",
    "clean": "rm -f -r dist/* .cache/*",
    "deploy": "firebase deploy",
    "serve": "node src/host/main.js",
    "start": "cd src && NODE_ENV=development rollup --watch --config config/rollup.config.js",
    "test": "npx jest"
  },
  "jest": {
    "moduleFileExtensions": [
      "ts",
      "tsx",
      "js"
    ],
    "transform": {
      "\\.(ts|tsx)$": "ts-jest"
    },
    "testRegex": "__tests__/.*\\.(ts|tsx)$",
    "globals": {
      "ts-jest": {
        "diagnostics": {
          "ignoreCodes": [
            151001
          ]
        }
      }
    }
  },
  "dependencies": {
    "express": "^4.17.2",
    "loglevel": "^1.8.0",
    "marked": "^4.0.12",
    "react": "^17.0.2",
    "react-dom": "^17.0.2",
    "react-router": "^6.2.1",
    "react-router-dom": "^6.2.1",
    "ultistore": "0.0.3"
  },
  "devDependencies": {
    "@rollup/plugin-commonjs": "^21.0.2",
    "@rollup/plugin-json": "^4.1.0",
    "@rollup/plugin-node-resolve": "^13.1.3",
    "@rollup/plugin-replace": "^4.0.0",
    "@rollup/plugin-typescript": "^8.3.1",
    "@types/express": "^4.17.13",
    "@types/jest": "^27.4.0",
    "@types/node": "^17.0.14",
    "@types/react": "^17.0.38",
    "@types/react-router": "^5.1.18",
    "@types/react-router-dom": "^5.3.3",
    "jest": "^27.4.7",
    "nyc": "^15.0.0",
    "rollup": "^2.70.0",
    "rollup-plugin-copy": "^3.4.0",
    "rollup-plugin-node-builtins": "^2.1.2",
    "rollup-plugin-node-globals": "^1.4.0",
    "rollup-plugin-serve": "^1.1.0",
    "rollup-plugin-styles": "^4.0.0",
    "ts-jest": "^27.1.3",
    "ts-node": "^10.4.0",
    "tslib": "^2.3.1",
    "typescript": "^4.5.5"
  }
}
