{
  "name": "cardindex",
  "version": "0.0.2",
  "description": "Conveniently record, trawl and find text data organized as cards on a mobile device",
  "main": "index.js",
  "scripts": {
    "build": "NODE_ENV=production ./node_modules/.bin/ts-node src/config/fuse.ts",
    "clean": "rm -f -r dist/* .cache/*",
    "deploy": "firebase deploy",
    "serve": "node src/host/main.js",
    "start": "NODE_ENV=development ./node_modules/.bin/ts-node src/config/fuse.ts",
    "test": "npx jest"
  },
  "repository": {
    "type": "git",
    "url": "git@github.com:stephenfrancis/cardindex"
  },
  "author": "stephen.d.francis@gmail.com",
  "license": "Apache-2.0",
  "jest": {
    "moduleFileExtensions": [
      "ts",
      "tsx",
      "js"
    ],
    "transform": {
      "\\.(ts|tsx)$": "ts-jest"
    },
    "testRegex": "__tests__/.*\\.(ts|tsx)$",
    "globals": {
      "ts-jest": {
        "diagnostics": {
          "ignoreCodes": [
            151001
          ]
        }
      }
    }
  },
  "dependencies": {
    "express": "^4.17.1",
    "loglevel": "^1.6.8",
    "marked": "^4.0.10",
    "react": "^17.0.2",
    "react-dom": "^17.0.2",
    "react-router": "^5.2.0",
    "react-router-dom": "^5.2.0",
    "ultistore": "0.0.3"
  },
  "devDependencies": {
    "@types/express": "^4.17.6",
    "@types/jest": "^26.0.23",
    "@types/node": "^16.0.0",
    "@types/react": "^17.0.13",
    "@types/react-router": "^5.1.7",
    "@types/react-router-dom": "^5.1.5",
    "fuse-box": "^4.0.1-next.7",
    "jest": "^27.0.6",
    "nyc": "^15.0.0",
    "postcss-modules": "^4.1.3",
    "ts-jest": "^27.0.3",
    "ts-node": "^10.0.0",
    "typescript": "^4.3.5"
  }
}
