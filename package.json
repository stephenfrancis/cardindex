{
  "name": "cardindex",
  "version": "0.0.1",
  "description": "Conveniently record, trawl and find text data organized as cards on a mobile device",
  "main": "index.js",
  "scripts": {
    "build": "npx parcel build src/public/index.html",
    "local": "npx parcel src/public/index.html",
    "start": "node src/host/main.js",
    "test": "npx jest"
  },
  "repository": {
    "type": "git",
    "url": "git@github.com:stephenfrancis/cardindex"
  },
  "author": "stephen.d.francis@gmail.com",
  "license": "Apache-2.0",
  "jest": {
    "moduleFileExtensions": [
      "ts",
      "tsx",
      "js"
    ],
    "transform": {
      "\\.(ts|tsx)$": "ts-jest"
    },
    "testRegex": "__tests__/.*\\.(ts|tsx)$",
    "globals": {
      "ts-jest": {
        "diagnostics": {
          "ignoreCodes": [
            151001
          ]
        }
      }
    }
  },
  "dependencies": {
    "express": "^4.17.1",
    "loglevel": "^1.6.8",
    "marked": "^2.1.3",
    "react": "^17.0.2",
    "react-dom": "^17.0.2",
    "react-router": "^5.2.0",
    "react-router-dom": "^5.2.0",
    "ultistore": "0.0.3"
  },
  "devDependencies": {
    "@types/express": "^4.17.6",
    "@types/jest": "^26.0.23",
    "@types/node": "^15.14.0",
    "@types/react": "^17.0.13",
    "@types/react-router": "^5.1.7",
    "@types/react-router-dom": "^5.1.5",
    "jest": "^27.0.6",
    "nyc": "^15.0.0",
    "parcel-bundler": "^1.12.4",
    "ts-jest": "^27.0.3",
    "ts-loader": "^9.2.3",
    "typescript": "^4.3.5"
  }
}
