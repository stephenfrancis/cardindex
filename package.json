{
  "name": "cardindex",
  "version": "0.0.2",
  "description": "Conveniently record, trawl and find text data organized as cards on a mobile device",
  "main": "index.js",
  "scripts": {
    "build": "NODE_ENV=production ./node_modules/.bin/ts-node src/config/fuse.ts",
    "clean": "rm -f -r dist/* .cache/*",
    "deploy": "firebase deploy",
    "serve": "node src/host/main.js",
    "start": "NODE_ENV=development ./node_modules/.bin/ts-node src/config/fuse.ts",
    "test": "npx jest"
  },
  "repository": {
    "type": "git",
    "url": "git@github.com:stephenfrancis/cardindex"
  },
  "author": "stephen.d.francis@gmail.com",
  "license": "Apache-2.0",
  "jest": {
    "moduleFileExtensions": [
      "ts",
      "tsx",
      "js"
    ],
    "transform": {
      "\\.(ts|tsx)$": "ts-jest"
    },
    "testRegex": "__tests__/.*\\.(ts|tsx)$",
    "globals": {
      "ts-jest": {
        "diagnostics": {
          "ignoreCodes": [
            151001
          ]
        }
      }
    }
  },
  "dependencies": {
    "express": "^4.17.2",
    "loglevel": "^1.8.0",
    "marked": "^4.0.12",
    "react": "^17.0.2",
    "react-dom": "^17.0.2",
    "react-router": "^6.2.1",
    "react-router-dom": "^6.2.1",
    "ultistore": "0.0.3"
  },
  "devDependencies": {
    "@types/express": "^4.17.13",
    "@types/jest": "^27.4.0",
    "@types/node": "^17.0.14",
    "@types/react": "^17.0.38",
    "@types/react-router": "^5.1.18",
    "@types/react-router-dom": "^5.3.3",
    "fuse-box": "^4.0.0",
    "jest": "^27.4.7",
    "nyc": "^15.0.0",
    "postcss-modules": "^4.3.0",
    "ts-jest": "^27.1.3",
    "ts-node": "^10.4.0",
    "typescript": "^4.5.5"
  }
}
